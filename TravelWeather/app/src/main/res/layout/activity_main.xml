<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.edu.eafit.travelweather.MainActivity">

    <RelativeLayout
        android:layout_width="388dp"
        android:layout_height="478dp"
        tools:layout_editor_absoluteX="-4dp"
        tools:layout_editor_absoluteY="1dp">

        <Button
            android:id="@+id/Clima"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="198dp"
            android:layout_height="223dp"
            android:background="@color/colorPrimary"
            android:onClick="callMapsActivity"
            android:text="Buscar Clima"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="1dp"
            android:layout_alignBottom="@+id/Login"
            android:layout_toLeftOf="@+id/Login"
            android:layout_toStartOf="@+id/Login"
            android:layout_alignParentTop="true" />

        <Button
            android:id="@+id/Rutas"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="180dp"
            android:layout_height="223dp"
            android:background="@color/colorPrimary"
            android:onClick="callRoutesActivity"
            android:text="Tus Rutas"
            tools:layout_editor_absoluteX="198dp"
            tools:layout_editor_absoluteY="1dp"
            android:layout_alignBottom="@+id/Reportes"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/Reportes" />

        <Button
            android:id="@+id/Reportes"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="197dp"
            android:layout_height="232dp"
            android:background="@color/colorPrimaryDark"
            android:onClick="callReportActivity"
            android:text="Reportes"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="249dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/Login"
            android:layout_toStartOf="@+id/Login" />

        <Button
            android:id="@+id/Login"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="183dp"
            android:layout_height="232dp"
            android:background="@color/colorPrimaryDark"
            android:onClick="callLoginActivity"
            android:text="Iniciar Sesion"
            tools:layout_editor_absoluteX="198dp"
            tools:layout_editor_absoluteY="249dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
